{
        "compilerOptions": {
                "target": "es2018",
                "baseUrl": ".",
                "esModuleInterop": true,
                "moduleResolution": "node",
                "module": "commonjs",
                "sourceMap": false,
                "noImplicitAny": true,
                "removeComments": true,
                "alwaysStrict": true,
                "outDir": "lib/",
                "strict": true,
                "noUnusedLocals": true,
                "lib": [
                        "ESNext"
                ],
                "types": [
                        "./@types/lib/"
                ],
                "composite": true,
                "rootDir": "src/",
                "typeRoots": [
                        "@types/lib"
                ],
                "declarationDir": "@types/lib"
        },
        "exclude": [
                ".vscode",
                ".gitignore",
                "package-lock.json",
                "*.code-workspace",
        ]
}