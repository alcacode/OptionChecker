{
        "compilerOptions": {
                "target": "es2018",
                "baseUrl": "/",
                "esModuleInterop": true,
                "moduleResolution": "node",
                "module": "commonjs",
                "sourceMap": false,
                "noImplicitAny": true,
                "removeComments": true,
                "alwaysStrict": true,
                "outDir": "lib/",
                "strict": true,
                "noUnusedLocals": true,
                "lib": [
                        "ESNext",
                        "DOM"
                ],
                "composite": true,
                "rootDir": "src/",
                "typeRoots": [
                        "@types/",
                        "@types/lib/",
                        "@types/lib/test/index.d.ts",
                ],
                "declarationDir": "@types/lib"
        },
        "include": [
                "src/**/*"
        ],
        "exclude": [
                ".vscode",
                ".gitignore",
                "package-lock.json",
                "*.code-workspace",
        ]
}