{
        "compilerOptions": {
                "target": "es2018",
                "baseUrl": "/",
                "esModuleInterop": true,
                "moduleResolution": "node",
                "module": "commonjs",
                "sourceMap": false,
                "noImplicitAny": true,
                "removeComments": true,
                "alwaysStrict": true,
                "outDir": ".",
                "strict": true,
                "noUnusedLocals": true,
                "lib": [
                        "ESNext",
                        "DOM"
                ],
                "composite": true,
                "rootDir": "src/",
                "typeRoots": [
                        "./src/index"
                ],
                "types": [
                        "./src/index",
                        "./index"
                ],
                "declarationDir": "./@types/option_checker/"
        },
        "include": [
                "./src/**/*"
        ],
        "exclude": [
                ".vscode",
                ".gitignore",
                "package-lock.json",
                "*.code-workspace",
        ]
}